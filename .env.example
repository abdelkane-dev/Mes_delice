# Configuration Django
SECRET_KEY=votre-secret-key-django
DEBUG=False

# ========================================
# OPTION 1: Production avec DATABASE_URL (Render, Heroku, etc.)
# ========================================
# DATABASE_URL fourni automatiquement par Render
DATABASE_URL=postgresql://user:password@host:5432/database

# ========================================
# OPTION 2: Développement local avec PostgreSQL
# ========================================
# Si DATABASE_URL n'est pas défini, ces paramètres seront utilisés
DB_NAME=delices_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ========================================
# CORS - Liste des origines autorisées séparées par des virgules
# ========================================
CORS_ALLOWED_ORIGINS=https://votre-frontend.onrender.com,https://votre-domaine.com

# ========================================
# Pour le développement local
# ========================================
# DEBUG=True
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000
